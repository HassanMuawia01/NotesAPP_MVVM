<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#707070">

        <View
            android:id="@+id/viewPriority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:background="@drawable/red_dot"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/merriweathersans_bold"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/notesSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="hi iam is the ahhafn nkanfd aooanfan nkfa nonf ao onoaf nao nafoao fnao anfonkndfnkenra kn afnooa dfnkk ntke akn anf "
                android:textColor="#E4DEDE"
                android:textSize="14dp"
                android:fontFamily="@font/merriweathersans_bold"
                />
            <TextView
                android:id="@+id/notesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="26 Nov 2023"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/merriweathersans_bold"
                android:maxLines="1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>